<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.rubeus.wonderbudget" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.android.rubeus.wonderbudget.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.android.rubeus.wonderbudget.TransactionActionActivity"
            android:label="@string/title_activity_add_transaction"
            android:theme="@android:style/Theme.Holo.Dialog" >
        </activity>
        <activity
            android:name="com.android.rubeus.wonderbudget.AddUpgradeTransactionActivity"
            android:label="@string/title_activity_add_upgrade_transaction"
            android:theme="@android:style/Theme.Holo.Dialog" >
        </activity>
        <activity
            android:name="com.android.rubeus.wonderbudget.ManageAccountActivity"
            android:label="@string/title_activity_manage_account" >
        </activity>
        <activity
            android:name="com.android.rubeus.wonderbudget.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.android.rubeus.wonderbudget.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.rubeus.wonderbudget.MainActivity" />
        </activity>
    </application>

</manifest>
